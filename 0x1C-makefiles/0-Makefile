# Makefile for compiling the 'school' executable

CC = gcc

CFLAGS = -Wall -Wextra -Werror -std=c11

SRCS = main.c school.c

OBJS = $(SRCS:.c=.o)

EXEC = school

all: $(EXEC)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(EXEC): $(OBJS)
	$(CC) $(OBJS) -o $(EXEC)

# Clean rule
clean:
	rm -f $(OBJS) $(EXEC)

.PHONY: all clean
